{
  "files": [],
  "references": [
    {
      "path": "./tsconfig.node.json"
    },
    {
      "path": "./tsconfig.app.json"
    }
  ],
  "compilerOptions": {
    "types": [
      "vue3-toastify/global"
    ],
    "target": "esnext",
    "module": "esnext",
    // использование более строгого вывода типов для свойств данных в this
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "~/": ["./"],
      "@/": ["./"]
    }
  },
  "include": ["src//.ts", "src//.d.ts", "src/**/.tsx", "src//.vue"]
}